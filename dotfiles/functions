## .functions inspired on https://github.com/mathiasbynens/dotfiles/blob/master/.functions

mk() {
  mkdir -p "$@" && cd "$@"
}

v() {
  if [[ $# -eq 0 ]]; then
    nvim .
  else
    nvim "$@"
  fi
}

yt() {
  if [[ $# -eq 2 ]]; then
    $HOME/.config/i3/mpv.sh "--ytdl-format=mp4 --playlist-start=$2 $1"
  else
    $HOME/.config/i3/mpv.sh "--ytdl-format=mp4 $@"
  fi
}
